# Required (Supabase)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Required (server-only): used to create allowlisted accounts with email + password.
# Never expose this key to the browser (do not prefix with NEXT_PUBLIC_).
SUPABASE_SERVICE_ROLE_KEY=

# Optional (recommended): only these emails can use the app (comma-separated).
# If unset, you can manage allowlist in Settings.
COUPLE_ALLOWED_EMAILS=

# Optional: disable the “gifted” starter content on first login.
COUPLE_DISABLE_SEED=

# Optional: brand / behavior
NEXT_PUBLIC_APP_NAME='Couple Dashboard'
